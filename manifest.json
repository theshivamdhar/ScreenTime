{
  "manifest_version": 3,
  "name": "ScreenTime",
  "version": "1.1",
  "description": "Tracks time spent on websites and provides a dashboard.",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
