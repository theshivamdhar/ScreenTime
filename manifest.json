{
  "manifest_version": 3,
  "name": "ScreenTime Tracker",
  "version": "1.0",
  "description": "Track time spent on websites with a movable timer.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  }
}
